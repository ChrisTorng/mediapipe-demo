{
    "name": "xr-tryon-demo",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint . --ext ts,tsx --max-warnings 0",
        "lint:styles": "stylelint \"src/**/*.{css,scss}\"",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "check:constitution": "npm run lint && npm run lint:styles && npm run format:check",
        "test:unit": "vitest",
        "test:e2e": "playwright test",
        "test:perf": "node scripts/lighthouse/run-lighthouse.mjs",
        "postinstall": "tsx scripts/mediapipe/fetch-models.ts"
    },
    "dependencies": {
        "@mediapipe/tasks-vision": "^0.10.10",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.8.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.12",
        "@playwright/test": "^1.46.0",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^15.0.0",
        "@types/node": "^20.12.12",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.19",
    "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^5.2.0",
        "jsdom": "^24.0.0",
        "lighthouse": "^12.1.0",
        "postcss": "^8.4.39",
        "prettier": "^3.2.5",
        "stylelint": "^16.6.1",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-order": "^6.0.4",
        "tsx": "^4.15.7",
        "tailwindcss": "^3.4.4",
        "typescript": "^5.4.5",
        "vite": "^5.2.11",
        "vitest": "^1.6.0"
    }
}